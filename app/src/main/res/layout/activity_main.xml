<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity"
    android:background="@drawable/home2"
    >
    <LinearLayout
        android:id="@+id/content_card_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        >
        <include layout="@layout/cardactions" ></include>
        <include layout="@layout/card_action_view_vehicle" ></include>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/content_card_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_card_main"
        android:background="@android:color/background_light"
        android:layout_margin="10dp"
       >
        <TextView
            android:id="@+id/text_you_vehicles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tus Vehiculos: "
            android:padding="10dp"
            android:layout_centerHorizontal="true"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/text_you_vehicles"
            android:layout_centerHorizontal="true"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_vehicles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

            </android.support.v7.widget.RecyclerView>


        </HorizontalScrollView>






    </RelativeLayout>





</RelativeLayout>